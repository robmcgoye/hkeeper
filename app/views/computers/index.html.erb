<h1>Computers</h1>

<div class="album py-3">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      <% @computers.each do |computer| %>
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-header">
              <div class="row">
                <div class="col">
                  <%= computer.name %>
                </div>
                <div class="col-auto">
                  <i><%= computer.account.name %></i>
                </div>
              </div>
            </div>
            <div class="card-body">
              <p class="card-text">
                <table class="table table-borderless">
                  <tr>
                    <td>Manufacturer</td>
                    <td><%= computer.manufacturer %></td>
                  </tr>
                  <tr>
                    <td>Make</td>
                    <td><%= computer.make %></td>
                  </tr>
                  <tr>
                    <td>Model</td>
                    <td><%= computer.model %></td>
                  </tr> 
                </table> 
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to "View", computer_path(computer), class: "btn btn-sm btn-outline-dark" %>
                  <%= button_to "Delete", computer_path(computer), method: :delete, class: "btn btn-sm btn-outline-danger", form: {data: {turbo_confirm: 'Are you sure?'}} %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>