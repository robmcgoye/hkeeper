<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <h4>Edit job for <%= @computer.name %></h4>
      <%= render 'form', job: @job, post_url: job_path(@job) %>
      <div class="btn-group p-2">
        <%= link_to "Back to #{@computer.name}", computer_path(@computer), class: "btn btn-sm btn-outline-dark" %> 
         <%= link_to "Back to Computers", computers_path, class: "btn btn-sm btn-outline-dark" %> 
      </div>
    </div>
  </div>
</div>