<h3>User Permissions</h3>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Roles</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.roles.where(resource_type: nil).pluck(:name) %></td>
    </tr>
    <% end %>
  </tbody>
</table>