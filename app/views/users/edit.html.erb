<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">

      <%= form_with model: @user, url: profile_path, :data => {:turbo => "false"}, method: :put do |f| %>
        <%= render 'shared/error_messages', resource: @user %>

        <div class="field form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, required: true, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, required: true, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :phone %><br />
          <%= f.text_field :phone, autofocus: true, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :email, "Current Email" %>
          <%= f.email_field :email, disabled: true, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :unconfirmed_email, "New Email" %>
          <%= f.text_field :unconfirmed_email, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :password, "Password (leave blank if you don't want to change it)" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
        <hr/>
        <div class="field form-group">
          <%= f.label :current_password, "Current password (we need your current password to confirm your changes)" %>
          <%= f.password_field :current_password, required: true, class: "form-control" %>
        </div>
        <div class="actions pt-2">
          <%= f.submit "Update Profile", class: "btn btn-sm btn-outline-dark" %>
        </div>
      <% end %>

    </div>
  </div>
</div>