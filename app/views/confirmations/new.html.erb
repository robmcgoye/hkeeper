<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <%= form_with model: @user, url: confirmations_path do |form| %>
        <div class="row">
          <div class="col-auto d-flex align-items-center">
          <%= form.label :email %>
          </div>
          <div class="col-auto field form-group">
            <%= form.email_field :email, required: true, class: "form-control" %>
          </div>
          <div class="col actions d-flex align-items-center">
            <%= form.button class: "btn btn-sm btn-outline-dark" do %>
               <i class="bi bi-check-circle pe-1"></i>Confirm Email
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>