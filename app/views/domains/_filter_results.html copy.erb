
<table class="table table-sm table-striped">
  <thead class="table-secondary">
    <th><a class="btn btn-sm btn-outline-primary active" href="#" role="button">Account<i class="bi bi-sort-alpha-down ps-2"></i></a></th>
    <th><a class="btn btn-sm btn-outline-secondary" href="#" role="button">Name</a></th>
    <th><a class="btn btn-sm btn-outline-secondary" href="#" role="button">Expires</a></th>
    <th></th>
  </thead>
  <% @domains.each do |domain| %>
    <tr>
      <td><%= domain.account.name %></td>
      <td><%= domain.name %></td>
      <td><%= domain.expires_on.strftime("Expires on %m/%d/%Y")  %></td>
      <td>
        <div class="btn-group">

          <%= link_to domain, class: "btn btn-sm btn-outline-dark" do %>
            <i class="bi bi-folder-symlink pe-1"></i>View
          <% end %>
          <% if policy(:domain).edit? %>
            <%= link_to edit_domain_path(domain), class: "btn btn-sm btn-outline-dark" do %>
              <i class="bi bi-pencil pe-1"></i>Edit
            <% end %>
          <% end %>
          <% if policy(:domain).destroy? %>
            <%= button_to domain, method: :delete, class: "btn btn-sm btn-outline-danger", form: {data: {turbo_confirm: 'Are you sure?'}} do %>
              <i class="bi bi-trash pe-1"></i>Delete
            <% end %>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
</table>
<div class="d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
</div>  