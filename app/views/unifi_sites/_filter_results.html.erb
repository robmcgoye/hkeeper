<%= turbo_frame_tag "filter_results" do %>
  <div class="row mt-1">
    <div class="col tb-header p-1">
      Account
    </div>
    <div class="col tb-header p-1">
      Name
    </div>
    <div class="col tb-header p-1">
      Last Invoice Date
    </div>
    <div class="col tb-header p-1"></div>
  </div>

  <% @unifi_sites.each_with_index do |unifi_site, index| %>
    <%= render "unifi_site", unifi_site: unifi_site, index: index, page: @pagy.page %>
  <% end %>

  <div class="d-flex justify-content-center pt-2">
    <%== pagy_bootstrap_nav(@pagy, link_extra: 'data-turbo-action="advance"') if @pagy.pages > 1 %>
  </div>  
<% end %>
