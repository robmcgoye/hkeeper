<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <div class="row">
        <div class="col">
          <h3>Unifi Sites</h3>
        </div>
        <div class="col-auto">
          <% if policy(:unifi_site).new? %>
            <%= link_to new_unifi_site_path, class: "btn btn-sm btn-outline-dark" do %>
              <i class="bi bi-plus-circle pe-1"></i>New Unifi Site
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <%= render "filter_form" %>
      </div>
      <table class="table table-sm table-striped">
        <thead class="table-secondary">
          <th>Account</th>
          <th>Name</th>
          <th>Last Invoice Date</th>
          <th></th>
        </thead>
        <% @unifi_sites.each do |unifi_site| %>
          <tr>
            <td><%= unifi_site.account.name %></td>
            <td><%= unifi_site.name %></td>
            <td><%= unifi_site.billed_date %></td>
            <td>
              <div class="btn-group">

                <%= link_to unifi_site, class: "btn btn-sm btn-outline-dark" do %>
                  <i class="bi bi-folder-symlink pe-1"></i>View
                <% end %>
                <% if policy(:unifi_site).edit? %>
                  <%= link_to edit_unifi_site_path(unifi_site), class: "btn btn-sm btn-outline-dark" do %>
                    <i class="bi bi-pencil pe-1"></i>Edit
                  <% end %>
                <% end %>
                <% if policy(:unifi_site).destroy? %>
                  <%= button_to unifi_site, method: :delete, class: "btn btn-sm btn-outline-danger", form: {data: {turbo_confirm: 'Are you sure?'}} do %>
                    <i class="bi bi-trash pe-1"></i>Delete
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </table>
      <div class="d-flex justify-content-center">
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
      </div> 
    </div>
  </div>
</div>