<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">

      <h3>Editing account</h3>

      <%= render "form", account: @account %>
      <br>
      <%= render "api_form", account: @account %>
      
      <br>

      <div class="btn-group">
        <%= link_to accounts_path, class: "btn btn-sm btn-outline-dark" do %>
          <i class="bi bi-arrow-left-circle pe-1"></i>Back to accounts
        <% end %>
        <%= button_to account_path(@account), class: "btn btn-sm btn-outline-danger", form: {data: {turbo_confirm: 'Are you sure?'}}, method: :delete do %>
          <i class="bi bi-trash"></i>Delete Account
        <% end %>
      </div>

    </div>
  </div>
</div>
