<h3>User Administration</h3>
            
<%= link_to new_user_administration_path, class: "btn btn-sm btn-outline-dark" do %>
  <i class="bi bi-plus-circle pe-1"></i>New User
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Roles</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% if user != current_user %>
        <tr class="<%= user.active ? 'fst-normal fw-normal' : 'fst-italic fw-light' %>">
          <td>
            <%= link_to user.email, user_administration_path(user) %>
          </td>
          <td>
            <%= format_roles(user) %>
          </td>
          <td>
            <div class="btn-group">
              <%= link_to edit_user_administration_path(user), class: "btn btn-sm btn-outline-dark" do %>
                <i class="bi bi-pencil pe-1"></i>Edit
              <% end %>        
              <%= link_to user_administration_roles_path(user), class: "btn btn-sm btn-outline-dark" do %>
                <i class="bi bi-pencil pe-1"></i>Edit Roles
              <% end %>        
            </div>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>