<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">

      <h3>Update status for invoice <%= @statement.invoice_number %></h3>

      <%= render "form", statement: @statement %>
 
      <div class="btn-group">
        <%= link_to statements_path, class: "btn btn-sm btn-outline-dark" do %>
          <i class="bi bi-arrow-left-circle pe-1"></i>Back to Statements
        <% end %>
        <%= link_to statement_path(@statement), class: "btn btn-sm btn-outline-dark" do %>
          <i class="bi bi-arrow-left-circle pe-1"></i>Back to Invoice
        <% end %>
      </div>

    </div>
  </div>
</div>
